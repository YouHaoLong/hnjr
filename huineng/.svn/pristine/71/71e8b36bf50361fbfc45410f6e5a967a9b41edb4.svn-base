	var stats = $('#addstats option:selected').attr('value');
	var com = $('#addcom').val();

	if(name == '') {
		alert('请输入角色名称');

	} else {
		$.ajax({
			url: '/role/add', // 跳转到 action
			type: 'POST',
			contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
			data: {
				'name': name,
				'seq': num,
				'status': stats,
				'description': com
			},
			dataType: "json", //返回结果格式
			success: function(data) {

				alert(data.msg);
				$('#myModal').modal('hide');
				listload(1, clas);

			},
			error: function() {
				// view("异常！");
				//				$.alert("异常！");
			}
		});
	}
}

